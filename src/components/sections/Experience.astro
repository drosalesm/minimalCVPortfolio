---
import Section from "@/components/Section.astro"
import { work } from "@cv"

---

<Section title="Experiencia profesional">

<ul>
{
    work.map(({name,startDate,endDate,position,summary})=>{
        const startYear= new Date(startDate).getFullYear()
        const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actualmente"
        const years=`${startYear}-${endYear}`



    return(
        <li>
            <article>
                <header>
                    <div class="cuerpo">
                        <h3>{name}</h3>
                        <h4>{position}:</h4>

                    </div>
                    <time>
                        {years}
                    </time>
                </header>
                <footer>
                    {summary}
                </footer>
            </article>            
        </li>
    )
}
    )
}
</ul>

</Section>


<style>

ul{
    display: flex;
    flex-direction: column;
    gap:32px;

}


article h3{
    font-weight: 500;
    color:#111;
}

article h4{
    color:#222;
    font-weight: 400;
    font-family: cursive;
    margin-top: 5px;

}


header{
    display:flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
}



time{
    color:#555;
    font-size: 0.85rem;
}


.cuerpo{
    margin-top: 10px;
}


footer{
    margin-top: 10px;
}

</style>