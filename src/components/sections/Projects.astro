---
import Section from "@/components/Section.astro"
import {projects,frelanceProjects} from "@cv"

---

<Section title="Proyectos Laborales">

<ul>
    {
        projects.map(({url,description,highlights,name,isActive})=>{
            return (
                <li>
                    <article>

                        <header>
                            <h3>
                                <a href={url} target="_blank" title="Ver proyecto">
                                {name}
                                </a>
                                {isActive && <span>•</span>}
                            </h3>
                            <p>{description}</p>
                            </header>
                        <footer>
                            {
                                highlights.map((highlights)=>{
                                    return (
                                        <span>{highlights}</span>
                                    )
                                })
                            }
                        </footer>
                    </article>
                </li>
            )
        })
    }
</ul>

</Section>
<Section title="Proyectos Freelance">
    <ul>
        {
            frelanceProjects.map(({url,description,highlights,name,isActive})=>{
                return (
                    <li>
                        <article>
    
                            <header>
                                <h3>
                                    <a href={url} target="_blank" title="Ver proyecto">
                                    {name}
                                    </a>
                                    {isActive && <span>•</span>}
                                </h3>
                                <p>{description}</p>
                                </header>
                            <footer>
                                {
                                    highlights.map((highlights)=>{
                                        return (
                                            <span>{highlights}</span>
                                        )
                                    })
                                }
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
ul{
    display: grid;
    grid-template-columns:repeat(auto-fit,minmax(200px,1fr));    
    gap:1rem;
}

article{
    border-radius: 8px;
    border:1px solid #d5c9c9;
    gap:16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
}

article header{
    flex:1;
}


article a{
    color:#111
}

article a:hover{
    text-decoration: underline;
}

article p{
    font-size: 0.8rem;
    line-height: 1.2rem;
    margin-top: 2px;
    margin-bottom: 8px;
}

article h3 span{
    color:rgb(2, 143, 2);
}

footer{

    display: flex;
    flex-wrap: wrap;
    gap:4px;
    font-size: 0.8rem;
}

footer span{
    border-radius: 6px;
    background: #b1b1b1;
    color: #000;;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
}

</style>