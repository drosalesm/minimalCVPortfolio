---
import Section from "@/components/Section.astro"

import {skills} from "@cv"


---

<Section title="Tecnologias">

<ul>
    {
        skills.map(({name,level})=>(
            <li>{name}</li>
        ))
    }
</ul>

</Section>


<style>
    ul{
        display:inline-flex;
        gap:8px;
        flex-wrap: wrap;
    }

li{
    border-radius: 6px;
    background:#413f3f;
    color:rgb(255, 255, 255);
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
}

</style>